<Window 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TwidiTools"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:controlzex="urn:controlzex"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" x:Class="TwidiTools.LogAnalyzer"
        mc:Ignorable="d"
        Title="Анализатор логов Twidibot'а" Height="500" Width="770" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Color x:Key="ColorForm_Dark">#FF333333</Color>
        <Color x:Key="ColoCon_White">#DDDDDA</Color>
    </Window.Resources>
    <Window.BorderBrush>
        <SolidColorBrush Color="{DynamicResource ColorForm_Dark}"/>
    </Window.BorderBrush>
    <Window.Foreground>
        <SolidColorBrush Color="{DynamicResource ColoCon_White}"/>
    </Window.Foreground>
    <Window.Background>
        <SolidColorBrush Color="{DynamicResource ColorForm_Dark}"/>
    </Window.Background>

    <Grid>
        <Label Content="Выберите лог" Foreground="#DDDDDA" FontSize="14" Padding="4,2" Margin="80,10,0,0" HorizontalAlignment="Left" Width="100" Height="24" VerticalAlignment="Top"/>
        <ListBox x:Name="lbLogsList" Margin="10,45,10,221" Background="#FF292929" Foreground="#DDDDDA" Grid.ColumnSpan="2"/>
        <TextBox x:Name="eLogsPath" Padding="2,1,2,1" TextWrapping="NoWrap" Height="27" Margin="185,10,10,0" Foreground="#DDDDDA" Background="#FF292929" CaretBrush="#FF8601F3" BorderBrush="#E5801C" materialDesign:HintAssist.Hint="Путь к логам" SelectionTextBrush="{x:Null}" ToolTipService.ShowOnDisabled="true" FontSize="12" UseLayoutRounding="False" VerticalAlignment="Top"/>
        <TextBlock x:Name="lOut" Foreground="#DDDDDA" FontSize="14" Padding="4,2" Margin="10,0,10,10" Height="24" VerticalAlignment="Bottom" TextAlignment="Center"/>
        <Button x:Name="bListUpdate" Content="Обновить" Margin="10,10,0,0" Background="#E5801C" BorderBrush="#E5801C" Foreground="#DDDDDA" Click="bListUpdate_Click" Padding="4,2" Height="24" FontSize="12" HorizontalAlignment="Left" Width="65" VerticalAlignment="Top"/>
        <Button x:Name="bDel1" Content="Удалить лишнее из лога (тип 1)" Margin="10,0,0,176" Background="#E5801C" BorderBrush="#E5801C" Foreground="#DDDDDA" Click="bDel1_Click" Padding="4,2" Height="30" HorizontalAlignment="Left" Width="219" VerticalAlignment="Bottom">
            <Button.ToolTip>
                <ToolTip MinWidth="100" MaxWidth="1000">
                    <TextBlock TextWrapping="Wrap" Text="Удаляет у принятых и отправленых на сокет сообщений: client-nonce, color, emotes, id, mod, room-id, subscriber, tmi-sent-ts, turbo, user-id, reply-parent-display-name, reply-parent-msg-body, reply-parent-msg-id (заменяется на this-msg-reply-parent;), reply-parent-user-id, reply-parent-user-login. Усекается тройное повторение логина отправителя. Полностью убирается пинг понг. Заменяется &quot;Принято на сокет:&quot; на &quot;&gt;&quot;, &quot;Отправлено на сокет:&quot; на &quot;&lt;&quot;"/>
                </ToolTip>
            </Button.ToolTip>
        </Button>
        <Button x:Name="bDel2" Content="Удалить лишнее из лога (тип 2)" Margin="10,0,0,130" Background="#E5801C" BorderBrush="#E5801C" Foreground="#DDDDDA" Click="bDel2_Click" Padding="4,2" Height="30" HorizontalAlignment="Left" Width="219" VerticalAlignment="Bottom">
            <Button.ToolTip>
                <ToolTip MinWidth="100" MaxWidth="1000">
                    <TextBlock TextWrapping="Wrap" Text="Удаляет у принятых и отправленых на сокет сообщений: client-nonce, color, emotes, id, mod, room-id, subscriber, tmi-sent-ts, turbo, user-id, reply-parent-display-name, reply-parent-msg-body, reply-parent-msg-id (заменяется на this-msg-reply-parent;), reply-parent-user-id, reply-parent-user-login. Усекается тройное повторение логина отправителя. Полностью убирается пинг понг, join и part. Заменяется &quot;Принято на сокет:&quot; на &quot;&gt;&quot;, &quot;Отправлено на сокет:&quot; на &quot;&lt;&quot;"/>
                </ToolTip>
            </Button.ToolTip>
        </Button>
        <Button x:Name="bDel3" Content="Удалить лишнее из лога (тип 3)" Margin="10,0,0,85" Background="#E5801C" BorderBrush="#E5801C" Foreground="#DDDDDA" Click="bDel3_Click" Padding="4,2" Height="30" HorizontalAlignment="Left" Width="219" VerticalAlignment="Bottom">
            <Button.ToolTip>
                <ToolTip MinWidth="100" MaxWidth="1000">
                    <TextBlock TextWrapping="Wrap" Text="Удаляет у принятых и отправленых на сокет сообщений: badge-info, badges, client-nonce, color, emotes, first-msg, flags, id, mod, room-id, subscriber, tmi-sent-ts, turbo, user-id, reply-parent-display-name, reply-parent-msg-body, reply-parent-msg-id (заменяется на this-msg-reply-parent;), reply-parent-user-id, reply-parent-user-login. Усекается тройное повторение логина отправителя. Полностью убирается пинг понг, join и part, имя канала (которое с решёткой). Заменяется &quot;Принято на сокет:&quot; на &quot;&gt;&quot;, &quot;Отправлено на сокет:&quot; на &quot;&lt;&quot;"/>
                </ToolTip>
            </Button.ToolTip>
        </Button>
        <Button x:Name="bEdit1" Content="Исправить пробел" Margin="10,0,0,39" Background="#E5801C" BorderBrush="#E5801C" Foreground="#DDDDDA" Click="bEdit1_Click" Padding="4,2" Height="30" HorizontalAlignment="Left" Width="219" VerticalAlignment="Bottom">
            <Button.ToolTip>
                <ToolTip MinWidth="100" MaxWidth="1000">
                    <TextBlock TextWrapping="Wrap" Text="Ставит пробел после скобок даты"/>
                </ToolTip>
            </Button.ToolTip>
        </Button>
    </Grid>
</Window>
